<%= form_with(model: product, local: true, class: "needs-validation") do |form| %>
  <% if product.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(product.errors.count, "помилка") %> забороняють зберегти:</h4>
      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, "Назва", class: "form-label" %>
    <%= form.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :brand, "Бренд", class: "form-label" %>
    <%= form.text_field :brand, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :price, "Ціна (₴)", class: "form-label" %>
    <%= form.number_field :price, step: 0.01, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :description, "Опис", class: "form-label" %>
    <%= form.text_area :description, rows: 5, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :photo_urls, "Посилання на фото (кожне посилання в новому рядку)", class: "form-label" %>
    <%= form.text_area :photo_urls,
                       value: product.photo_urls.is_a?(Array) ? product.photo_urls.join("\n") : product.photo_urls,
                       rows: 6, class: "form-control", placeholder: "https://example.com/image1.jpg" %>
    <div class="form-text">Кожне посилання з нового рядка</div>
  </div>

  <div class="mb-3">
    <label>Доступні розміри</label><br>
    <% Size.all.each do |size| %>
      <div class="form-check form-check-inline">
        <%= check_box_tag "product[size_ids][]",
                          size.id,
                          product.sizes.include?(size),
                          id: "size_#{size.id}",
                          class: "form-check-input" %>
        <%= label_tag "size_#{size.id}", size.eu_size, class: "form-check-label" %>
      </div>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit "Зберегти товар", class: "btn btn-success" %>
    <%= link_to "Скасувати", products_path, class: "btn btn-secondary ms-2" %>
  </div>
<% end %>