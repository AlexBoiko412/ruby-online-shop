<div class="container my-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-5 fw-bold">Каталог товарів (адміністрування)</h1>
    <% if current_user&.admin? %>
      <%= link_to "Новий товар", new_product_path, class: "btn btn-success btn-lg" %>
    <% end %>
  </div>

  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% end %>

  <%= search_form_for @q, url: products_path, class: "mb-5 bg-light p-4 rounded shadow-sm" do |f| %>
    <div class="row g-3 align-items-end">
      <!-- Пошук -->
      <div class="col-lg-4">
        <%= f.label :name_or_description_cont, "Пошук товару", class: "form-label fw-bold" %>
        <div class="input-group">
          <%= f.search_field :name_or_description_cont,
                             class: "form-control form-control-lg",
                             placeholder: "Nike Air, Adidas Ultra, кросівки...",
                             value: params.dig(:q, :name_or_description_cont) %>
          <button class="btn btn-primary btn-lg" type="submit">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
              <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
            </svg>
          </button>
        </div>
      </div>

      <div class="col-lg-2">
        <%= f.label :brand_eq, "Бренд", class: "form-label fw-bold" %>
        <%= f.select :brand_eq,
                     options_for_select(Product.distinct.pluck(:brand).sort, params.dig(:q, :brand_eq)),
                     { include_blank: "Всі бренди" },
                     class: "form-select" %>
      </div>

      <div class="col-lg-2">
        <%= f.label :price_gteq, "Ціна від", class: "form-label fw-bold" %>
        <%= f.number_field :price_gteq, class: "form-control", placeholder: "1000", min: 0 %>
      </div>
      <div class="col-lg-2">
        <%= f.label :price_lteq, "Ціна до", class: "form-label fw-bold" %>
        <%= f.number_field :price_lteq, class: "form-control", placeholder: "10000", min: 0 %>
      </div>

      <div class="col-lg-2 d-flex gap-2">
        <div class="dropdown flex-fill">
          <button class="btn btn-outline-secondary dropdown-toggle w-100" type="button" data-bs-toggle="dropdown">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-down-up me-1" viewBox="0 0 16 16">
              <path fill-rule="evenodd" d="M11.5 15a.5.5 0 0 0 .5-.5V2.707l3.146 3.147a.5.5 0 0 0 .708-.708l-4-4a.5.5 0 0 0-.708 0l-4 4a.5.5 0 1 0 .708.708L11 2.707V14.5a.5.5 0 0 0 .5.5zm-7-14a.5.5 0 0 1 .5.5v11.793l3.146-3.147a.5.5 0 0 1 .708.708l-4 4a.5.5 0 0 1-.708 0l-4-4a.5.5 0 0 1 .708-.708L4 13.293V1.5a.5.5 0 0 1 .5-.5z"/>
            </svg>
            Сортувати:
            <strong>
              <% if params[:sort] == "price_asc" %>
                за ціною (від дешевих)
              <% elsif params[:sort] == "price_desc" %>
                за ціною (від дорогих)
              <% elsif params[:sort] == "name" %>
                за назвою
              <% else %>
                за новизною
              <% end %>
            </strong>
          </button>
          <ul class="dropdown-menu w-100">
            <li><%= link_to "За новизною", products_path(q: params[:q]&.permit!.to_h, sort: nil), class: "dropdown-item #{'active' if params[:sort].blank?}" %></li>
            <li><%= link_to "За ціною (від дешевих)", products_path(q: params[:q]&.permit!.to_h, sort: "price_asc"), class: "dropdown-item #{'active' if params[:sort] == 'price_asc'}" %></li>
            <li><%= link_to "За ціною (від дорогих)", products_path(q: params[:q]&.permit!.to_h, sort: "price_desc"), class: "dropdown-item #{'active' if params[:sort] == 'price_desc'}" %></li>
            <li><%= link_to "За назвою (А → Я)", products_path(q: params[:q]&.permit!.to_h, sort: "name"), class: "dropdown-item #{'active' if params[:sort] == 'name'}" %></li>
          </ul>
        </div>

        <%= link_to "Скинути", products_path, class: "btn btn-outline-danger" %>
      </div>
    </div>
  <% end %>

  <div class="mb-4 text-muted fs-5">
    Знайдено: <strong><%= @products.count %></strong> товарів
  </div>

  <% if @products.present? %>
    <div id="products">
      <% @products.each do |product| %>
        <%= render partial: "product", locals: { product: product } %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-5">
      <h3 class="text-muted">Товари не знайдені</h3>
      <p class="lead">Спробуйте змінити параметри пошуку або фільтри</p>
      <%= link_to "Показати всі товари", products_path, class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>
</div>