<h1>Ваш кошик (<%= session[:cart]&.size || 0 %>)</h1>

<% if session[:cart].present? %>
  <table class="table">
    <% session[:cart].each do |item| %>
      <% product = Product.find(item[:product_id]) %>
      <tr>
        <td><%= product.name %></td>
        <td>Розмір: <%= item[:size] %></td>
        <td><%= number_to_currency(product.price, unit: "₴") %></td>
      </tr>
    <% end %>
  </table>

  <%= button_to "Оформити замовлення", checkout_path, class: "btn btn-success btn-lg" %>
  <%= link_to "Очистити кошик", cart_path, data: { turbo_method: :delete }, class: "btn btn-danger" %>
<% else %>
  <p>Кошик порожній</p>
<% end %>
<%= link_to "Продовжити покупки", root_path, class: "btn btn-secondary" %>