<nav aria-label="Навігація">
  <ul class="pagination pagination-lg justify-content-center">
    <%= paginator.render do %>
      <li class="page-item"><%= first_page_tag %></li>
      <li class="page-item"><%= prev_page_tag %></li>

      <% each_page do |page| %>
        <% if page.display_tag? %>
          <li class="page-item <%= 'active' if page.current? %>">
            <%= page_tag page %>
          </li>
        <% elsif page.left_outer? || page.right_outer? || page.inside_window? %>
          <li class="page-item disabled"><span class="page-link">...</span></li>
        <% end %>
      <% end %>

      <li class="page-item"><%= next_page_tag %></li>
      <li class="page-item"><%= last_page_tag %></li>
    <% end %>
  </ul>
</nav>
